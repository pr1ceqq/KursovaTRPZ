<Window x:Class="KursovaTRPZ.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="InfoWindow" Height="200" Width="400">
    <Grid>
        <TextBlock x:Name="WelcomeMessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Admin Functions" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16"  Margin="0"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="EventLogs Menu" Click="ViewEventLogsButton_Click" Height="30" Margin="10"/>
                <Button Content="Engineers Menu" Click="ShowEngineersButton_Click" Height="30" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>